<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>mysqlUrl</param-name>
        <param-value>jdbc:mysql://localhost:3306/CourseSQL?useSSL=false</param-value>
    </context-param>
    <context-param>
        <param-name>mysqlUser</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>mysqlPassword</param-name>
        <param-value>1234</param-value>
    </context-param>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>activelearning.LoginServlet</servlet-class>
        <init-param>
            <param-name>jdbcUrl</param-name>
            <param-value>jdbc:derby://localhost:1527/ActivelearningDB</param-value>
        </init-param>
        <init-param>
            <param-name>dbUsername</param-name>
            <param-value>app</param-value>
        </init-param>
        <init-param>
            <param-name>dbPassword</param-name>
            <param-value>app</param-value>
        </init-param>
        <init-param>
            <param-name>cipherTransformation</param-name>
            <param-value>AES/ECB/PKCS5Padding</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>CaptchaServlet</servlet-name>
        <servlet-class>activelearning.CaptchaServlet</servlet-class>
        <init-param>
            <param-name>length</param-name>
            <param-value>6</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>AddCourseServlet</servlet-name>
        <servlet-class>activelearning.AddCourseServlet</servlet-class>
        <init-param>
            <param-name>mysqlUrl</param-name>
            <param-value>jdbc:mysql://localhost:3306/CourseSQL?zeroDateTimeBehavior=CONVERT_TO_NULL</param-value>
        </init-param>
        <init-param>
            <param-name>mysqlUser</param-name>
            <param-value>root</param-value>
        </init-param>
        <init-param>
            <param-name>mysqlPassword</param-name>
            <param-value>1234</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>EnterClassServlet</servlet-name>
        <servlet-class>activelearning.EnterClassServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>activelearning.LogOutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ApplyJobServlet</servlet-name>
        <servlet-class>activelearning.ApplyJobServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>activelearning.SignUpServlet</servlet-class>
        <init-param>
            <param-name>jdbcUrl</param-name>
            <param-value>jdbc:derby://localhost:1527/ActivelearningDB</param-value>
        </init-param>
        <init-param>
            <param-name>dbUsername</param-name>
            <param-value>app</param-value>
        </init-param>
        <init-param>
            <param-name>dbPassword</param-name>
            <param-value>app</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>CourseServlet</servlet-name>
        <servlet-class>activelearning.CourseServlet</servlet-class>
        <init-param>
            <param-name>mysqlUrl</param-name>
            <param-value>jdbc:mysql://localhost:3306/CourseSQL?zeroDateTimeBehavior=CONVERT_TO_NULL</param-value>
        </init-param>
        <init-param>
            <param-name>mysqlUser</param-name>
            <param-value>root</param-value>
        </init-param>
        <init-param>
            <param-name>mysqlPassword</param-name>
            <param-value>1234</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>PrintUsersDBServlet</servlet-name>
        <servlet-class>activelearning.PrintUsersDBServlet</servlet-class>
        <init-param>
            <param-name>jdbcUrl</param-name>
            <param-value>jdbc:derby://localhost:1527/ActivelearningDB</param-value>
        </init-param>
        <init-param>
            <param-name>dbUsername</param-name>
            <param-value>app</param-value>
        </init-param>
        <init-param>
            <param-name>dbPassword</param-name>
            <param-value>app</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>PrintCourseListDBServlet</servlet-name>
        <servlet-class>activelearning.PrintCourseListDBServlet</servlet-class>
        <init-param>
            <param-name>mysqlUrl</param-name>
            <param-value>jdbc:mysql://localhost:3306/CourseSQL?zeroDateTimeBehavior=CONVERT_TO_NULL</param-value>
        </init-param>
        <init-param>
            <param-name>mysqlUser</param-name>
            <param-value>root</param-value>
        </init-param>
        <init-param>
            <param-name>mysqlPassword</param-name>
            <param-value>1234</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>PrintOwnRecordServlet</servlet-name>
        <servlet-class>activelearning.PrintOwnRecordServlet</servlet-class>
        <init-param>
            <param-name>mysqlUrl</param-name>
            <param-value>jdbc:mysql://localhost:3306/CourseSQL?zeroDateTimeBehavior=CONVERT_TO_NULL</param-value>
        </init-param>
        <init-param>
            <param-name>mysqlUser</param-name>
            <param-value>root</param-value>
        </init-param>
        <init-param>
            <param-name>mysqlPassword</param-name>
            <param-value>1234</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>ClassServlet</servlet-name>
        <servlet-class>activelearning.ClassServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CaptchaServlet</servlet-name>
        <url-pattern>/CaptchaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCourseServlet</servlet-name>
        <url-pattern>/AddCourseServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EnterClassServlet</servlet-name>
        <url-pattern>/EnterClassServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/LogOutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ApplyJobServlet</servlet-name>
        <url-pattern>/ApplyJobServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/SignUpServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CourseServlet</servlet-name>
        <url-pattern>/CourseServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrintUsersDBServlet</servlet-name>
        <url-pattern>/PrintUsersDBServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrintCourseListDBServlet</servlet-name>
        <url-pattern>/PrintCourseListDBServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrintOwnRecordServlet</servlet-name>
        <url-pattern>/PrintOwnRecordServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClassServlet</servlet-name>
        <url-pattern>/ClassServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/error404.jsp</location>
    </error-page>
</web-app>
